Given an integer array nums, find the subarray
 with the largest sum, and return its sum.
 ...........................................................
class Solution {
public:
    int maxSubArray(vector<int>& nums) {
        int max_sum = INT_MIN;  
        int current_sum = 0;

        for (int num : nums) {
            current_sum += num; 
            max_sum = max(max_sum, current_sum);  
            if (current_sum < 0) {
                current_sum = 0;  
            }
        }

        return max_sum;  
    }
};
